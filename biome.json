{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"**/src/**"
		],
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.git/**",
			"**/.vscode/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useEnumInitializers": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"trailingComma": "all",
			"semicolons": "always",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"quoteStyle": "single",
			"indentWidth": 2,
			"indentStyle": "space"
		}
	}
}
